<div class="row h-100">
  <div class="col-12 text-center my-auto">
    <h2>Sign up</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "email" %>
      </div>
      <br>

      <div class="field">
        <% password_placeholder="password"
        if @minimum_password_length
          password_placeholder+=" (#{@minimum_password_length} character minimum)"
        end %>
        <%= f.password_field :password, autocomplete: "off", 
          placeholder: "#{password_placeholder}" %>
      </div>
      <br>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation" %>
      </div>

      <div class="actions">
        <%= f.submit id: "login-button", class: "btn-outline-primary",
         value:"Sign up" %>
      </div>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
