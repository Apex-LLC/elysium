<div class="row h-100">
  <div class="col-12 text-center my-auto">
    <h2>Welcome To Elysium, <%= @user.first_name.capitalize %>!</h2>
    <h5>Simply choose a password to complete your account</h5>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'errors/form_errors', object: resource %>

      <div class="field">
        <% email = (@user != nil ? @user.email : "") %>
        <%= f.email_field :email, autofocus: true, placeholder: "email", value: email %>
      </div>
      <br>

      <div class="field">
        <% password_placeholder="password"
        if @minimum_password_length
          password_placeholder+=" (#{@minimum_password_length} character minimum)"
        end %>
        <%= f.password_field :password, autocomplete: "off",
          placeholder: "#{password_placeholder}" %>
      </div>
      <br>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation" %>
      </div>

      <%= f.hidden_field :account_id, value: @user.account.id %>
      <%= hidden_field_tag :tenant_id, params[:id] %>

      <div class="actions">
        <%= f.submit id: "login-button", class: "btn-outline-primary",
         value:"Sign up" %>
      </div>

      <!-- <%= render "devise/shared/links" %> -->
    <% end %>
  </div>
</div>
