
<div class="row">
  <div class="offset-2 col-8">
    
    <div class="row">
      <div class="col-2">
        <%= image_tag "logo.png", class: "full-width-image rounded-circle" %>
      </div>
      <div class="col-5 my-auto">
        <h1><%= @invoice.tenant.name %></h1>
        <h4><%= @invoice.readable_date %></h4>
      </div>
      <div class="col-5 my-auto text-right">
        <h2>Invoice</h2>
        <h4><%= @invoice.number %></h4>
      </div>
    </div>

    </br>

    <%= render 'invoice_line_chart', invoice: @invoice %>

    </br>
    <hr>

    <div class="row">
      <div class="col-12" id="invoice-meter-list">
        <%= render 'invoice_meter_list', invoice: @invoice %>
      </div>
    </div>

    </br>
    
    <% if (@invoice.status == "Unpaid") %>
      <div class="text-center">
        <button class="btn-outline-primary btn-large">Pay Now</button>
      </div>
    <% end %>
  </div>
</div>

</br>
</br>
    
