<p id="notice"><%= notice %></p>

<h1>Billable Meters</h1>

<table>
  <thead>
    <tr>
      <th>Meter</th>
      <th>Percent allocation</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @billable_meters.each do |billable_meter| %>
      <tr>
        <td><%= billable_meter.meter.reference %></td>
        <td><%= billable_meter.percent_allocation %></td>
        <td><%= billable_meter.start_time %></td>
        <td><%= billable_meter.end_time %></td>
        <td><%= link_to 'Show', billable_meter %></td>
        <td><%= link_to 'Edit', edit_billable_meter_path(billable_meter) %></td>
        <td><%= link_to 'Destroy', billable_meter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

