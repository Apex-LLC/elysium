<div class="row">
  <div class="offset-2 col-8">

    <div class="behind" style="z-index:-1">
      <h1>Tenants</h1>

      <table class="table sortable">
        <thead>
          <tr>
            <th class="clickable">Name</th>
            <th class="clickable text-center">Amount Due</th>
            <th class="clickable text-center">Delete</th>
          </tr>
        </thead>

        <tbody>
          <% @tenants.each do |tenant| 
            name = tenant.name
            amount_due = number_with_delimiter(number_to_currency(tenant.amount_due),delimiter:',')
            %>
            <tr class='clickable-row' data-href='<%= tenant_path(tenant) %>'>
              <td><%= name %></td>
              <td class="text-center"><%= amount_due %></td>
              <!-- <td><%= link_to 'Edit', edit_tenant_path(tenant) %></td> -->
              <td class="text-center"><%= link_to 'âœ•', tenant, method: :delete, data: { confirm: 'Are you sure you would like to delete ' + name + '?' } %></td>
            </tr>
          <% end %>
          <tfoot>
            <tr>        
              <td colspan="4"><%= link_to '+ Add New', new_tenant_path, :remote => true %></td>
            </tr>
          </tfoot>
        </tbody>
      </table>
    </div>
  </div>
</div>